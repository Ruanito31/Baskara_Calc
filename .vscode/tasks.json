{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Python Script",
      "type": "shell",
      "command": "python",
      "args": [
        "${file}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "silent",
        "panel": "new",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": ["$pythonLint"]
    }
  ]
}
